<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/profile_bg"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <ImageView
        android:layout_gravity="center"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="30dp"
        android:background="@color/white"
        android:id="@+id/imview"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fitness Sports"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="05dp"
        android:textSize="20sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sport"
        android:id="@+id/sport1"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textStyle="italic"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:textSize="20sp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/schedulebutton"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:background="#EEEEEC"
        android:text="Add to Schedule"/>

    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="40dp"
        android:layout_centerVertical="true"
        android:background="@color/profile_status_board"
        android:id="@+id/rlStatusBoard"
        android:layout_width="match_parent"
        android:layout_height="130dp">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:id="@+id/rlWins"
            android:layout_height="match_parent">
            <View
                android:layout_width="1dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:background="@android:color/black"
                android:layout_alignParentRight="true"
                android:layout_height="match_parent"/>
            <RelativeLayout
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvWins"
                    android:text="1"
                    android:textSize="25dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/lblWins"
                    android:layout_below="@id/tvWins"
                    android:textSize="20dp"
                    android:layout_marginLeft="30dp"
                    android:text="WINS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" /></RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:id="@+id/rlLosses"
            android:layout_height="match_parent">
            <View
                android:layout_width="1dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:background="@android:color/black"
                android:layout_marginRight="0dp"
                android:layout_alignParentRight="true"
                android:layout_height="match_parent"/>
            <RelativeLayout
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvLosses"
                    android:text="1"
                    android:textSize="25dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/lblLosses"
                    android:layout_below="@id/tvLosses"
                    android:textSize="20dp"
                    android:layout_marginLeft="30dp"
                    android:text="LOSSES"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:id="@+id/rlTies"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvTies"
                    android:text="1"
                    android:textSize="25dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/lblTies"
                    android:layout_below="@id/tvTies"
                    android:textSize="20dp"
                    android:layout_marginLeft="30dp"
                    android:text="TIES"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" /></RelativeLayout>

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>

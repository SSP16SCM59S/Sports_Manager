<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@drawable/images"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.cs442.shash5259.Login_1"
    tools:showIn="@layout/activity_login1"
    android:orientation="horizontal">


    <EditText
        android:layout_width="250dp"
        android:maxLines="1"
        android:maxLength="25"
        android:textCursorDrawable="@null"
        android:textColor="#000"
        android:backgroundTint="#000"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textStyle="italic"
        android:text="Username"
        android:layout_weight="1"
        android:id="@+id/etusername"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/etpassword" />
    <EditText
        android:layout_width="250dp"
        android:backgroundTint="#000"
        android:maxLines="1"
        android:layout_height="wrap_content"
        android:textCursorDrawable="@null"
        android:textColor="#000"
        android:layout_gravity="center_vertical"
        android:textStyle="italic"
        android:text="Password"
        android:inputType="textPassword"
        android:maxLength="10"
        android:layout_weight="1"
        android:id="@+id/etpassword"
        android:layout_below="@+id/login_text_pass"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etpassword"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        android:layout_alignRight="@+id/etpassword"
        android:layout_alignEnd="@+id/etpassword"
        android:layout_alignLeft="@+id/etpassword"
        android:layout_alignStart="@+id/etpassword"
        android:text="Login"
        android:textStyle="italic"
        android:textAllCaps="false"
        android:id="@+id/Blogin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="New user? Register Here"
        android:id="@+id/textView"
        android:layout_below="@+id/Blogin"
        android:layout_alignRight="@+id/Blogin"
        android:layout_alignEnd="@+id/Blogin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/login_text_pass"
        android:textStyle="italic"
        android:textAllCaps="false"
        android:layout_below="@+id/etusername"
        android:layout_alignLeft="@+id/etusername"
        android:layout_alignStart="@+id/etusername" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/login_text_user"
        android:layout_above="@+id/login_text_pass"
        android:textStyle="italic"
        android:textAllCaps="false"
        android:layout_alignLeft="@+id/etusername"
        android:layout_alignStart="@+id/etusername"
        android:fontFamily="Roboto/Helvetica"
        android:layout_marginBottom="34dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView2"
        android:textColor="#ffffff"
        android:gravity="center"
        android:textSize="26sp"
        android:textStyle="bold"
        android:fontFamily="Roboto"
        android:text="Sports Manager"
        android:layout_above="@+id/imageView2"
        android:layout_alignStart="@+id/login_text_user" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_toEndOf="@+id/login_text_pass" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:gravity="center"
        android:id="@+id/imageView2"
        android:src="@drawable/imageedit_11_7894021887"
        android:foregroundGravity="center"
        android:layout_gravity="center"
        android:layout_above="@+id/login_text_user"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
